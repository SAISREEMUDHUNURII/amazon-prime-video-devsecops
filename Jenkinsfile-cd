pipeline {
  agent any

  environment {
    DOCKER_IMAGE = 'saisreemudhunurii/primevideo-app:latest'
    CONTAINER_NAME = 'primevideo-app'
  }

  stages {
    stage('üõë Stop & Remove Old Container') {
      steps {
        script {
          def containerExists = sh(script: "docker ps -a -q --filter name=$CONTAINER_NAME", returnStdout: true).trim()
          if (containerExists) {
            sh """
              docker ps -q --filter "name=$CONTAINER_NAME" | grep -q . && \
              docker stop $CONTAINER_NAME && \
              docker rm $CONTAINER_NAME || echo "No existing container to stop."
            """
          } else {
            echo "‚úÖ No existing container to stop."
          }
        }
      }
    }

    stage('üì• Pull Docker Image from DockerHub') {
      steps {
        echo "Pulling latest image: $DOCKER_IMAGE"
        sh "docker pull $DOCKER_IMAGE"
      }
    }

    stage('üöÄ Run New Docker Container') {
      steps {
        echo "Running container: $CONTAINER_NAME"
        sh "docker run -d --name $CONTAINER_NAME --restart unless-stopped -p 3001:3000 $DOCKER_IMAGE"
      }
    }
  }

  post {
    success {
      echo '‚úÖ Deployment successful.'
    }
    failure {
      echo '‚ùå Deployment failed.'
    }
  }
}
